                    {ropaExclusiva.map((item) => (
                        <div class="feature-card">
                            <img src={item.image} alt={item.name} loading="lazy" class="app-image" />
                            <h4>{item.name}</h4>
                        </div>
                    ))}
                </div>
            </div>

            <div class="service-item">
                <h3>Asesorías Matemáticas</h3>
                <div class="feature-grid">
                    {asesoriasMatematicas.map((item) => (
                        <div class="feature-card">
                            <img src={item.image} alt={item.name} loading="lazy" class="app-image" />
