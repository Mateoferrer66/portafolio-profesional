---
import { getCollection } from "astro:content";

// Layout import — provides basic page elements: <head>, <nav>, <footer> etc.
import BaseLayout from "../layouts/BaseLayout.astro";

// Component Imports
import CallToAction from "../components/CallToAction.astro";
import Grid from "../components/Grid.astro";
import Hero from "../components/Hero.astro";
import Icon from "../components/Icon.astro";
import Pill from "../components/Pill.astro";
import PortfolioPreview from "../components/PortfolioPreview.astro";

// Page section components
import ContactCTA from "../components/ContactCTA.astro";
import Skills from "../components/Skills.astro";
import StatCard from "../components/StatCard.astro";
import ServiceCard from "../components/ServiceCard.astro";
import TestimonialCard from "../components/TestimonialCard.astro";

// Content Fetching: List four most recent work projects
const projects = (await getCollection("work"))
	.sort((a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf())
	.slice(0, 4);

import { products } from "../data/products";
const featuredProducts = products.slice(0, 4);

// Full Astro Component Syntax:
// https://docs.astro.build/core-concepts/astro-components/
---

<BaseLayout>
	<script type="application/ld+json" slot="head">
		{
			"@context": "https://schema.org",
			"@type": "WebSite",
			"name": "Mateo Ferrer - Desarrollador Web",
			"url": "https://portafolio-profesional.pages.dev/",
			"potentialAction": {
				"@type": "SearchAction",
				"target": "https://portafolio-profesional.pages.dev/shop/?search={search_term_string}",
				"query-input": "required name=search_term_string"
			}
		}
	</script>
	<div class="stack gap-20 lg:gap-48">
		<div class="wrapper stack gap-8 lg:gap-20 reveal">
			<header class="hero">
				<Hero
					title="Hello, My name is Mateo Ferrer!"
					tagline="Master Software Engineer | Full Stack Developer | Dev Ops and IA Specialist | Software Enginner | +220 certified courses"
					align="start"
				>
					<div class="roles">
						<Pill
							><Icon icon="code" size="1.33em" /> Software Engineer</Pill
						>
						<Pill
							><Icon icon="rocket-launch" size="1.33em" /> E-Commerce</Pill
						>
						<Pill
							><Icon icon="pencil-line" size="1.33em" /> Marketing</Pill
						>
					</div>
					<div class="cta-buttons">
						<a href="/about/" class="cta-button primary">
							<Icon icon="arrow-right" size="1.2em" /> View My Work
						</a>
						<a
							href="https://wa.me/573005059987"
							target="_blank"
							rel="noopener noreferrer"
							class="cta-button secondary"
						>
							<Icon icon="paper-plane-tilt" size="1.2em" /> Let's Talk
						</a>
						<a
							href="/assets/HV_MATEOFERRER_2026-01.pdf"
							download
							class="cta-button secondary"
						>
							<Icon icon="paper-plane-tilt" size="1.2em" /> Download
							CV
						</a>
					</div>
				</Hero>

				<img
					alt="Portada Mateo Ferrer"
					width="480"
					height="620"
					src="/assets/portrait.jpg"
					id="hero-portrait"
					fetchpriority="high"
					loading="eager"
				/>
			</header>

			<script>
				const portrait = document.getElementById("hero-portrait");
				if (portrait) {
					document.addEventListener("mousemove", (e) => {
						const { clientX, clientY } = e;
						const { innerWidth, innerHeight } = window;

						// Calculate rotation (max 15 degrees)
						const yRotation = (clientX / innerWidth - 0.5) * 30; // Rotate around Y axis based on X position
						const xRotation = -(clientY / innerHeight - 0.5) * 30; // Rotate around X axis based on Y position

						portrait.style.transform = `perspective(1000px) rotateX(${xRotation}deg) rotateY(${yRotation}deg) scale3d(1.05, 1.05, 1.05)`;
					});

					// Reset on mouse leave
					document.addEventListener("mouseleave", () => {
						portrait.style.transform =
							"perspective(1000px) rotateX(0) rotateY(0) scale3d(1, 1, 1)";
					});
				}
			</script>

			<Skills />
		</div>

		<!-- Statistics Section -->
		<section class="stats-section wrapper reveal">
			<header class="section-header stack gap-2 lg:gap-4">
				<h2>By The Numbers</h2>
				<p>A snapshot of my professional journey and impact.</p>
			</header>
			<div class="stats-grid">
				<StatCard
					number="5+"
					label="Years of Experience"
					description="In Software Development & Design"
				/>
				<StatCard
					number="50+"
					label="Projects Completed"
					description="From startups to enterprises"
				/>
				<StatCard
					number="200+"
					label="Certifications"
					description="From Platzi, Google, Udemy & more"
				/>
				<StatCard
					number="100%"
					label="Client Satisfaction"
					description="Dedicated to excellence"
				/>
			</div>
		</section>

		<!-- Services Section -->
		<section class="services-section wrapper reveal">
			<header class="section-header stack gap-2 lg:gap-4">
				<h2>Services I Offer</h2>
				<p>Comprehensive solutions tailored to your needs.</p>
			</header>
			<div class="services-grid">
				<ServiceCard
					title="Full Stack Development"
					icon="code"
					description="Build scalable web applications with React, Angular, Astro, Node.js, and more."
				/>
				<ServiceCard
					title="UI/UX Design"
					icon="pencil-line"
					description="Create beautiful, user-centric interfaces that engage and convert."
				/>
				<ServiceCard
					title="DevOps & Cloud"
					icon="rocket-launch"
					description="Deploy and manage applications with confidence using modern DevOps practices."
				/>
				<ServiceCard
					title="AI Integration"
					icon="trophy"
					description="Leverage artificial intelligence to enhance your business processes."
				/>
				<ServiceCard
					title="Digital Marketing"
					icon="strategy"
					description="Drive growth through strategic digital marketing and social media management."
				/>
				<ServiceCard
					title="E-Commerce Solutions"
					icon="rocket-launch"
					description="Build robust, scalable e-commerce platforms that drive sales."
				/>
			</div>
		</section>

		<main class="wrapper stack gap-20 lg:gap-48">
			<section class="section with-background with-cta reveal">
				<header class="section-header stack gap-2 lg:gap-4">
					<h2>Featured Projects</h2>
					<p>
						Take a look below at some of my featured work for
						clients from the past few years.
					</p>
				</header>

				<div class="gallery">
					<Grid variant="offset">
						{
							projects.map((project) => (
								<li>
									<PortfolioPreview project={project} />
								</li>
							))
						}
					</Grid>
				</div>

				<div class="cta">
					<CallToAction href="/work/">
						View All Projects
						<Icon icon="arrow-right" size="1.2em" />
					</CallToAction>
				</div>
			</section>

			<!-- Testimonials Section -->
			<section class="testimonials-section reveal">
				<header class="section-header stack gap-2 lg:gap-4">
					<h2>What Clients Say</h2>
					<p>
						Don't just take my word for it. Here's what my clients
						have to say about working with me.
					</p>
				</header>

				<div class="testimonials-grid">
					<TestimonialCard
						name="Sarah Johnson"
						role="CEO"
						company="TechStart Inc"
						comment="Mateo delivered an exceptional e-commerce platform that increased our sales by 150%. His professionalism and attention to detail is unmatched."
					/>
					<TestimonialCard
						name="Carlos Rodriguez"
						role="Project Manager"
						company="Digital Solutions"
						comment="Working with Mateo was a game-changer. He transformed our outdated website into a modern, responsive platform that our customers love."
					/>
					<TestimonialCard
						name="Maria García"
						role="Marketing Director"
						company="Creative Agency"
						comment="Mateo's understanding of both design and development made collaboration seamless. He consistently exceeded expectations on every project."
					/>
				</div>
			</section>

			<section class="section with-background bg-variant">
				<header class="section-header stack gap-2 lg:gap-4">
					<h2>Featured In</h2>
					<p>
						I have been fortunate enough to recieve praise for my
						work in several publications.
					</p>
				</header>

				<div class="gallery">
					<Grid variant="small">
						{
							["", "", "", "", ""].map((brand, index) => (
								<li class="mention-card">
									<img
										src={`/assets/mentions/${index}.png`}
										alt={`Publication ${index}`}
										width="150"
										height="75"
										loading="lazy"
										decoding="async"
									/>

									<p>{brand}</p>
								</li>
							))
						}
					</Grid>
				</div>
			</section>
		</main>

		<ContactCTA />
	</div>
</BaseLayout>

<style>
	.hero {
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 2rem;
		position: relative;
		padding: 2rem;
		border-radius: 2rem;
		overflow: hidden;
	}

	.hero::before {
		content: "";
		position: absolute;
		top: -50%;
		left: -50%;
		width: 200%;
		height: 200%;
		background: linear-gradient(
			45deg,
			var(--accent-dark) 0%,
			var(--accent-regular) 25%,
			var(--accent-light) 50%,
			var(--accent-regular) 75%,
			var(--accent-dark) 100%
		);
		opacity: 0.03;
		animation: rotate-gradient 15s linear infinite;
		z-index: -1;
	}

	@keyframes rotate-gradient {
		0% {
			transform: rotate(0deg);
		}
		100% {
			transform: rotate(360deg);
		}
	}

	.roles {
		display: none;
	}

	.download-cv {
		display: inline-flex;
		padding: 0.5rem 1rem;
		gap: 0.5rem;
		color: var(--accent-text-over);
		border: 1px solid var(--accent-regular);
		background-color: var(--accent-regular);
		border-radius: 999rem;
		font-size: var(--text-md);
		line-height: 1.35;
		white-space: nowrap;
		text-decoration: none;
		align-items: center;
		transition: all 0.3s ease;
		margin-top: 0.5rem;
	}

	.download-cv:hover {
		background-color: var(--accent-dark);
		border-color: var(--accent-dark);
		transform: translateY(-2px);
		box-shadow: var(--shadow-md);
	}

	.hero img {
		aspect-ratio: 3 / 4;
		object-fit: cover;
		object-position: top;
		border-radius: 1.5rem;
		box-shadow: var(--shadow-lg);
		transition:
			transform 0.3s ease,
			box-shadow 0.3s ease;
		border: 3px solid rgba(255, 255, 255, 0.1);
	}

	.hero img:hover {
		transform: scale(1.02) translateY(-5px);
		box-shadow: 0 20px 60px rgba(0, 0, 0, 0.4);
	}

	@media (min-width: 50em) {
		.hero {
			display: grid;
			grid-template-columns: 6fr 4fr;
			padding-inline: 2.5rem;
			gap: 3.75rem;
		}

		.roles {
			margin-top: 0.5rem;
			display: flex;
			gap: 0.5rem;
			flex-wrap: wrap;
			align-items: center;
		}

		.download-cv {
			margin-top: 0;
		}

		.hero img {
			aspect-ratio: 3 / 4;
			border-radius: 4.5rem;
			object-fit: cover;
		}
	}

	/* ====================================================== */

	.section {
		display: grid;
		gap: 2rem;
	}

	.with-background {
		position: relative;
	}

	.with-background::before {
		--hero-bg: var(--bg-image-subtle-2);

		content: "";
		position: absolute;
		pointer-events: none;
		left: 50%;
		width: 100vw;
		aspect-ratio: calc(2.25 / var(--bg-scale));
		top: 0;
		transform: translateY(-75%) translateX(-50%);
		background:
			url("/assets/backgrounds/noise.png") top center/220px repeat,
			var(--hero-bg) center center / var(--bg-gradient-size) no-repeat,
			var(--gray-999);
		background-blend-mode: overlay, normal, normal, normal;
		mix-blend-mode: var(--bg-blend-mode);
		z-index: -1;
	}

	.with-background.bg-variant::before {
		--hero-bg: var(--bg-image-subtle-1);
	}

	.section-header {
		justify-self: center;
		text-align: center;
		max-width: 50ch;
		font-size: var(--text-md);
		color: var(--gray-300);
	}

	.section-header h3 {
		font-size: var(--text-2xl);
	}

	@media (min-width: 50em) {
		.section {
			grid-template-columns: repeat(4, 1fr);
			grid-template-areas: "header header header header" "gallery gallery gallery gallery";
			gap: 5rem;
		}

		.section.with-cta {
			grid-template-areas: "header header header cta" "gallery gallery gallery gallery";
		}

		.section-header {
			grid-area: header;
			font-size: var(--text-lg);
		}

		.section-header h3 {
			font-size: var(--text-4xl);
		}

		.with-cta .section-header {
			justify-self: flex-start;
			text-align: left;
		}

		.gallery {
			grid-area: gallery;
		}

		.cta {
			grid-area: cta;
		}
	}

	/* ====================================================== */

	/* ====================================================== */

	.mention-card {
		display: flex;
		height: 7rem;
		justify-content: center;
		align-items: center;
		text-align: center;
		border: 1px solid var(--gray-800);
		border-radius: 1.5rem;
		color: var(--gray-300);
		background: var(--gradient-subtle);
		box-shadow: var(--shadow-sm);
	}

	.mention-card img {
		height: auto;
		max-height: 60%;
		max-width: 80%;
		object-fit: contain;
	}

	/* Statistics Section */
	.stats-section {
		display: flex;
		flex-direction: column;
		gap: 3rem;
	}

	.stats-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
		gap: 2rem;
	}

	/* Services Section */
	.services-section {
		display: flex;
		flex-direction: column;
		gap: 3rem;
	}

	.services-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
		gap: 2rem;
	}

	/* Testimonials Section */
	.testimonials-section {
		display: flex;
		flex-direction: column;
		gap: 3rem;
	}

	.testimonials-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
		gap: 2rem;
	}

	/* CTA Buttons */
	.cta-buttons {
		display: flex;
		gap: 1rem;
		flex-wrap: wrap;
		margin-top: 1rem;
	}

	.cta-button {
		display: inline-flex;
		padding: 0.75rem 1.5rem;
		gap: 0.75rem;
		align-items: center;
		text-decoration: none;
		font-weight: 600;
		border-radius: 999rem;
		transition: all 0.3s ease;
		font-size: var(--text-md);
	}

	.cta-button.primary {
		background-color: var(--accent-regular);
		color: var(--accent-text-over);
		border: 1px solid var(--accent-regular);
	}

	.cta-button.primary:hover {
		background-color: var(--accent-dark);
		border-color: var(--accent-dark);
		transform: translateY(-2px);
		box-shadow: var(--shadow-md);
	}

	.cta-button.secondary {
		background-color: transparent;
		color: var(--accent-regular);
		border: 1px solid var(--accent-regular);
	}

	.cta-button.secondary:hover {
		background-color: var(--accent-regular);
		color: var(--accent-text-over);
		transform: translateY(-2px);
		box-shadow: var(--shadow-md);
	}

	@media (min-width: 50em) {
		.mention-card {
			border-radius: 1.5rem;
			height: 9.5rem;
		}

		.stats-grid {
			grid-template-columns: repeat(4, 1fr);
		}

		.services-grid {
			grid-template-columns: repeat(3, 1fr);
		}

		.testimonials-grid {
			grid-template-columns: repeat(3, 1fr);
		}

		.cta-buttons {
			gap: 1.5rem;
		}

		.cta-button {
			padding: 0.875rem 2rem;
			font-size: var(--text-lg);
		}
	}
</style>
