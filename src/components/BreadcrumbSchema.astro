---
interface Props {
    items: {
        name: string;
        url: string;
    }[];
}

const { items } = Astro.props as Props;
// items format: [{ name: "Home", url: "/" }, { name: "About", url: "/about/" }]
---

<script
    type="application/ld+json"
    set:html={JSON.stringify({
        "@context": "https://schema.org",
        "@type": "BreadcrumbList",
        itemListElement: items.map((item, index) => ({
            "@type": "ListItem",
            position: index + 1,
            name: item.name,
            item: `https://portafolio-profesional.pages.dev${item.url}`,
        })),
    })}
/>
